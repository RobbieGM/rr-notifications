{
  "name": "rr-notifications",
  "version": "0.0.0-development",
  "description": "Flexible react notification system",
  "keywords": [
    "react",
    "styled-components",
    "notifications"
  ],
  "homepage": "https://thegrinder.github.io/rr-notifications",
  "repository": {
    "type": "git",
    "url": "https://github.com/thegrinder/rr-notifications.git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "production": "webpack",
    "prepublishOnly": "npm run production",
    "lint": "eslint src/.; exit 0",
    "fix": "eslint --fix src/.; exit 0",
    "test": "jest",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "docz:deploy": "docz build && gh-pages -d .docz/dist",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "Pawel Szczepkowski",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/npm": "^5.1.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.4",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.11.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.0",
    "react": "^16.8.2",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.8.2",
    "react-test-renderer": "^16.7.0",
    "semantic-release": "^15.13.3",
    "styled-components": "^4.1.3",
    "webpack": "4.28.4",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "styled-components": "^4.1.3"
  },
  "dependencies": {
    "prop-types": "^15.6.2"
  }
}